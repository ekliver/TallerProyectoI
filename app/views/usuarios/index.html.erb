<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<div class="table-responsive">
  <table class="table table-hover ">

  <thead>
    <tr>
      <th>Login</th>
      <th>Nombre Usuario</th>
      <th>Correo</th>
      <th>Apellidos</th>
      <th>Nro DNI</th>
      <th>NÃºmero Celular</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.logiUsuario %></td>
        <td><%= usuario.nomUsuario %></td>
        <td><%= usuario.correoUsuario %></td>
        <td><%= usuario.apeUsuario %></td>
        <td><%= usuario.numDni %></td>
        <td><%= usuario.numCelular %></td>
        <td><%= usuario.imgUsuario %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Ver', usuario, class: "btn btn-primary"  %></td>
          <td><%= link_to 'Editar', edit_usuario_path(usuario) , class: "btn btn-info" %></td>
          <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Estas seguro?' } , class: "btn btn-danger" %></td>
        <%end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% if user_signed_in? %>
  <%= link_to 'Nuevo Usuario', new_usuario_path, class: "btn btn-success" %>
<% end %>