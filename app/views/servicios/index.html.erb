
<br>
<h2>Servicios</h2>

<div class="table-responsive">
  <table class="table table-hover ">

  <thead>
    <tr>
      <th>Nombre Servicio</th>
      <th>Inactivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.nomServicio %></td>
        <td><%= servicio.inActivo %></td>
        
        <% if user_signed_in? %>
          <td><%= link_to 'Ver', servicio, class: "btn btn-primary"  %></td>
          <td><%= link_to 'Editar', edit_servicio_path(servicio) , class: "btn btn-info" %></td>
          <td><%= link_to 'Eliminar', servicio, method: :delete, data: { confirm: 'Estas seguro?' } , class: "btn btn-danger" %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<% if user_signed_in? %>
<%= link_to 'Nuevo Servicio', new_servicio_path , class: "btn btn-success"%>
<% end %>