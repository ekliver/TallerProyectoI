
<br>
<h2>Imagenes</h2>

<div class="table-responsive">
  <table class="table table-hover ">

  <thead>
    <tr>
      <th>Url Imagen</th>
      <th>Url Imagen Previa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imagens.each do |imagen| %>
      <tr>
        <td><%= imagen.urlImagen %></td>
        <td><%= imagen.urlImagenPrevia %></td>
        
        <td><%= link_to 'Ver', imagen, class: "btn btn-primary"  %></td>
        <td><%= link_to 'Editar', edit_imagen_path(imagen) , class: "btn btn-info" %></td>
        <td><%= link_to 'Eliminar', imagen, method: :delete, data: { confirm: 'Estas seguro?' } , class: "btn btn-danger" %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nueva Imagen', new_imagen_path , class: "btn btn-success"%>
