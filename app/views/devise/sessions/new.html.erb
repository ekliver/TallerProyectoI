<div class="text-center">

<div class="card">
<br>
<h2><i class="fas fa-sign-in-alt"></i> Ingreso de Proveedores</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|  %>
  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "correo" , class:"form-control"%>
  </div>
  <br>
  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "contraseña" , class:"form-control"%>
  </div>
  <br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuerdame" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar" , class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</div>

</body>