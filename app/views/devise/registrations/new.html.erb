<div class="text-center">
<h2>Registrese</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.hidden_field :idUsuario, value: @user.id, class:"form-control" %><br />
  </div>
  
  <div class="field">
    <%= f.label :logiUsuario, "LogiUsuario" %>
    <%= f.text_field :logiUsuario, autofocus: true, class:"form-control" %>
  </div>
  <br> 
  <div class="field">
    <%= f.label :nomUsuario, "Nombre" %>
    <%= f.text_field :nomUsuario, autofocus: true, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :apeUsuario, "Apellidos" %>
    <%= f.text_field :apeUsuario, autofocus: true, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :numDni, "NÃºmero de DNI" %>
    <%= f.text_field :numDni, autofocus: true, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :numCelular, "Celular" %>
    <%= f.text_field :numCelular, autofocus: true, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.hidden_field :imgUsuario, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password , "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmar password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Registrese" , class: "btn btn-primary"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div> 