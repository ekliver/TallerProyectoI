

<br> 
<h2>Empresas</h2>
<div class="table-responsive">
  <table class="table table-hover ">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Descripci√≥n</th>
      <th>Logo</th>
      <th>Telefono</th>
      <th>Skype</th>
      <th>Clave</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nomEmpresa %></td>
        <td><%= empresa.desEmpresa %></td>
        <td><%= empresa.urlLogo %></td>
        <td><%= empresa.numSoporte %></td>
        <td><%= empresa.nomSkype %></td>
        <td><%= empresa.inClave %></td>
        <td><%= link_to 'Ver', empresa, class: "btn btn-primary"  %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa) , class: "btn btn-info" %></td>
        <td><%= link_to 'Eliminar', empresa, method: :delete, data: { confirm: 'Estas seguro?' } , class: "btn btn-danger" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nueva Empresa', new_empresa_path, class: "btn btn-success" %>



