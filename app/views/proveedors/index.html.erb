    <% end %>
    
    
  </div>
  



  <h1>Proveedores</h1>
  <div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Razon social</th>
        <th>Direccion</th>
        <th>Distrito</th>
        <th>Provincia</th>
        <th>Departamento</th>
        <th>Telefono</th>
        <th>Cel1</th>
        <th>Cel2</th>
        <th>Correo</th>
        <th>Tipo</th>
        <th>Lat</th>
        <th>Lon</th>
        <th>Url</th>
        <th>H Inicio</th>
        <th>H Fin</th>
        <th>Foto</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @proveedors.each do |proveedor| %>
        <tr>
          <td><%= proveedor.razon_social %></td>
          <td><%= proveedor.direccion %></td>
          <td><%= proveedor.distrito %></td>
          <td><%= proveedor.provincia %></td>
          <td><%= proveedor.departamento %></td>
          <td><%= proveedor.telefono %></td>
          <td><%= proveedor.celular1 %></td>
          <td><%= proveedor.celular2 %></td>
          <td><%= proveedor.correo %></td>
          <td><%= proveedor.tipo_servicio %></td>
          <td><%= proveedor.latitud %></td>
          <td><%= proveedor.longitud %></td>
          <td><%= proveedor.url %></td>
          <td><%= proveedor.hora_inicio %></td>
          <td><%= proveedor.hora_fin %></td>
          <td><%= proveedor.foto_local %></td>
          <td><%= link_to 'Ver', proveedor, class: "btn btn-primary"  %></td>
          <td><%= link_to 'Edita', edit_proveedor_path(proveedor) , class: "btn btn-info" %></td>
          <td><%= link_to 'Destruye', proveedor, method: :delete, data: { confirm: 'Estas seguro?' } , class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div> 
  <br>
  <% if user_signed_in? %>
    <%= link_to 'Nuevo Proveedor', new_proveedor_path , class: "btn btn-success"%>
  <% end %>  
  
