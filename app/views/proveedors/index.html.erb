
  <div class="row">
    

  
    <div class="col-10">
    <% if !user_signed_in? %>
  	<p class="sign_in"><%= link_to "Acceder aqui", new_user_session_path,  class: "btn btn-light" %></p>
  	
    <% end %>
    </div>
    
    
    <% if user_signed_in? %>
    <div class="col-1">
        <%= link_to "Perfil", edit_user_registration_path,  class: "btn btn-light" %>
    </div>
